<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:id="@+id/itemFrom"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:maxWidth="250dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="To:"
            android:id="@+id/itemTo"
            android:layout_below="@+id/itemFrom" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:maxWidth="250dp"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/itemDate" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="10dp" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracked Time"
            android:id="@+id/itemTime"
            android:layout_below="@+id/itemDate" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>

</RelativeLayout>